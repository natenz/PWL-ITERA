<html lang="en">
    <head>
        <meta name="viewport" content="widht=device-width,initial-scale=1.0">
        <title>WEB LANJUT</title>
        <link rel="stylesheet" href="/assets/css/sugar.css">
    </head>

    <body>
        {%include "navigasi.njk" %}
        <section>
            {{content | safe}}
        </section>

//Tugas
        <script>
            var checkbox = document.querySelector('input[name=mode]');

            checkbox.addEventListener('change', function () {
                if (this.checked) {
                    trans()
                    document
                        .documentElement
                        .setAttribute('data-theme', 'dark')
                } else {
                    trans()
                    document
                        .documentElement
                        .setAttribute('data-theme', 'light')
                }
            })

            let trans = () => {
                document
                    .documentElement
                    .classList
                    .add('transition');
                window.setTimeout(() => {
                    document
                        .documentElement
                        .classList
                        .remove('transition');
                }, 500)
            }
        </script>
    
    </body>
</html>